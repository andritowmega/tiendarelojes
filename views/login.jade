extends layout

block content
  .row.justify-content-center
    .col-md-4
        h1 Ingresar
        form(method="post" action="/login")
            .mb-3
                label.form-label(for='exampleInputEmail1') Email
                input#exampleInputEmail1.form-control(type='email' aria-describedby='emailHelp' name="correo")
            .mb-3
                label.form-label(for='exampleInputPassword1') Password
                input#exampleInputPassword1.form-control(type='password' name="password")
            button.btn.btn-primary(type='submit') Ingresar