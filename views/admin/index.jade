extends layout

block content
    .row.justify-content-center
        .col-md-8
            h1 Lista de pedidos
            
            table.table.table-hover
                thead
                    tr
                    th(scope='col') Nombres
                    th(scope='col') Telefono
                    th(scope='col') Dirección
                    th(scope='col') Material
                    th(scope='col') Color
                    th(scope='col') Precio
                    th(scope='col') Marca 
                    th(scope='col') Descripción
                each item in pedidos
                    tbody
                        tr
                        td #{item.nombre} #{item.primer_apellido} #{item.segundo_apellido}
                        td #{item.telefono}
                        td #{item.direccion}
                        td #{item.material}
                        td #{item.color}
                        td S/ #{item.precio}
                        td #{item.marca}
                        td #{item.descripcion}
